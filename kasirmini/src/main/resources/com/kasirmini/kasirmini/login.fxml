<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/13"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.kasirmini.kasirmini.LoginController"
            prefWidth="400" prefHeight="350"
            style="-fx-background-color: linear-gradient(to bottom, #6a11cb, #2575fc);">

    <VBox spacing="15" alignment="CENTER"
          layoutX="50" layoutY="40"
          prefWidth="300"
          style="-fx-background-color: white; -fx-background-radius: 15;">

        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <Label text="Kasir Mini - Login"
               style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

        <TextField fx:id="txtUsername" promptText="Username"
                   style="-fx-background-radius: 8; -fx-padding: 8;"/>

        <PasswordField fx:id="txtPassword" promptText="Password"
                       style="-fx-background-radius: 8; -fx-padding: 8;"/>

        <Button text="Login" onAction="#handleLogin"
                style="-fx-background-color: #2575fc; -fx-text-fill: white;
                       -fx-background-radius: 8; -fx-padding: 10; -fx-font-size: 14px;"/>

    </VBox>

</AnchorPane>
