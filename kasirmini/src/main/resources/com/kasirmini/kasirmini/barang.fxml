<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane xmlns="http://javafx.com/javafx/13"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.kasirmini.kasirmini.BarangController"
            prefWidth="700" prefHeight="500"
            style="-fx-background-color: linear-gradient(to bottom, #8fd3ff, #5aa9ff);">

    <!-- AWAN DEKORASI -->
    <Circle radius="40" layoutX="100" layoutY="80" fill="white" opacity="0.85"/>
    <Circle radius="30" layoutX="140" layoutY="70" fill="white" opacity="0.8"/>
    <Circle radius="25" layoutX="70" layoutY="100" fill="white" opacity="0.8"/>

    <Circle radius="35" layoutX="600" layoutY="70" fill="white" opacity="0.85"/>
    <Circle radius="28" layoutX="630" layoutY="85" fill="white" opacity="0.8"/>
    <Circle radius="25" layoutX="570" layoutY="90" fill="white" opacity="0.8"/>

    <Circle radius="45" layoutX="620" layoutY="420" fill="white" opacity="0.85"/>
    <Circle radius="30" layoutX="580" layoutY="410" fill="white" opacity="0.8"/>

    <!-- CARD UTAMA -->
    <VBox spacing="15" alignment="TOP_CENTER"
          layoutX="60" layoutY="60"
          prefWidth="580" prefHeight="380"
          style="-fx-background-color: rgba(255,255,255,0.95);
                 -fx-background-radius: 24;">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <effect>
            <DropShadow radius="12" offsetY="4" color="#4a89c999"/>
        </effect>

        <Label text="Kelola Barang"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #003366;"/>

        <!-- FORM INPUT -->
        <HBox spacing="10">
            <TextField fx:id="txtNamaBarang" promptText="Nama Barang"
                       prefWidth="220"
                       style="-fx-background-radius: 12; -fx-padding: 8;
                              -fx-border-radius: 12; -fx-border-color: #c9d9ff;"/>

            <TextField fx:id="txtHarga" promptText="Harga"
                       prefWidth="120"
                       style="-fx-background-radius: 12; -fx-padding: 8;
                              -fx-border-radius: 12; -fx-border-color: #c9d9ff;"/>

            <TextField fx:id="txtStok" promptText="Stok"
                       prefWidth="80"
                       style="-fx-background-radius: 12; -fx-padding: 8;
                              -fx-border-radius: 12; -fx-border-color: #c9d9ff;"/>
        </HBox>

        <!-- TOMBOL AKSI -->
        <HBox spacing="10">
            <Button text="Tambah" onAction="#tambahBarang"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white;
                           -fx-background-radius: 999; -fx-padding: 8 14;"/>

            <Button text="Update" onAction="#updateBarang"
                    style="-fx-background-color: #f1c40f; -fx-text-fill: white;
                           -fx-background-radius: 999; -fx-padding: 8 14;"/>

            <Button text="Hapus" onAction="#hapusBarang"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;
                           -fx-background-radius: 999; -fx-padding: 8 14;"/>

            <Button text="Clear" onAction="#clearForm"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white;
                           -fx-background-radius: 999; -fx-padding: 8 14;"/>
        </HBox>

        <!-- TABEL BARANG -->
        <TableView fx:id="tblBarang" prefHeight="230" prefWidth="540"
                   style="-fx-background-radius: 14;">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colNama" text="Nama" prefWidth="220"/>
                <TableColumn fx:id="colHarga" text="Harga" prefWidth="130"/>
                <TableColumn fx:id="colStok" text="Stok" prefWidth="90"/>
            </columns>
        </TableView>

        <!-- KEMBALI -->
        <Button text="Kembali ke Menu Admin" onAction="#kembaliMenuAdmin"
                style="-fx-background-color: #3498db; -fx-text-fill: white;
                       -fx-background-radius: 999; -fx-padding: 8 16;"/>

    </VBox>

</AnchorPane>
